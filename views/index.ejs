<%- include('./parts/head.ejs') %> <%# Navbar %> <%-
include('./parts/navbar.ejs') %>

<div class="container-fluid">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <p
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%= message.message %> </strong>
      </p>
      <% } %>
      <div class="table-responsive">
        <% if (products != "") { %>

        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>Name</th>
              <th>Image</th>
              <th>Price</th>
              <th>Wholesale</th>
              <th>Deller</th>
              <th>Amount</th>
              <th>Barcode</th>
              <th>Category</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody style="vertical-align: middle">
            <% products.forEach((row,index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>Keyboard</td>
              <td>
                <img src="<%= row.image %>" width="250" class="img-thumbnail" />
              </td>
              <td><%= row.price %></td>
              <td><%= row.wholesale %></td>
              <td><%= row.deller %></td>
              <td><%= row.amount %></td>
              <td><%= row.barcode %></td>
              <td><%= row.category %></td>
              <td>
                <a href="/edit/<%= row._id  %>" class="text-success"
                  ><i class="fas fa-edit fa-lg mx-1"></i
                ></a>
                <a href="/delete/<%= row._id  %>" class="text-danger"
                  ><i class="fas fa-trash fa-lg mx-1"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <% }else{ %>
        <h1 class="text-center text-secodary mt-5">
          No user found in database!
        </h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%# Footer %> <%-include('./parts/footer.ejs') %>
